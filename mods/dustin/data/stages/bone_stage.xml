<!DOCTYPE codename-engine-stage>
<stage zoom=".45" folder="stages/bonetravaganza" >
	<sprite name="room" x="0" y="0" sprite="room" scale="1"/>

	<sprite name="tenna" x="0" y="0" sprite="tenna" scale="1">
		<anim name="tenna idle" x="0" y="0" loop="true" fps="24"/>
	</sprite>

	<sprite name="guitar_background" x="0" y="0" sprite="guitar_background" scale="1">
		<anim name="guitar_background" x="0" y="0" loop="true" fps="24"/>
	</sprite>

	<sprite name="ghosts" x="0" y="0" sprite="ghosts" scale="1">
		<anim name="ghosts" x="0" y="0" loop="true" fps="24"/>
	</sprite>	

	<!-- CHARACTERS -->
	<gf x="640" y="-130" camxoffset="-180" camyoffset="200"/>
	<opponent x="350" y="860" camxoffset="250" camyoffset="0"/>
	<player x="1800" y="900" camxoffset="-450" camyoffset="0"/>

	<sprite name="guitar_foreground" x="0" y="0" sprite="guitar_foreground" scale="1">
		<anim name="guitar_foreground" x="0" y="0" loop="true" fps="24"/>
	</sprite>

	<sprite name="lights" x="0" y="0" sprite="lights" scale="1" alpha="1"/>

	<sprite name="bg_char" x="240" y="200" sprite="bg_char" scale="1" scrollx="1.3">
		<anim name="bg_char idle" x="0" y="0" loop="true" fps="24"/>
	</sprite>
</stage>