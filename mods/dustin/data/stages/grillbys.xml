<!DOCTYPE codename-engine-stage>
<stage zoom="0.7" name="grillbys" folder="stages/grillbys" playerZoom="0.9">
	<!-- main -->
	<sprite name="bg" sprite="broken/bg"/>
	<sprite name="bg_spark" sprite="broken/bg_spark"/>

	<!-- flashback -->
	<sprite name="walls" sprite="flashback/7" x="20" y="60" scroll="0.4" scale="1.2"/>
	<sprite name="door" sprite="flashback/6" x="0" y="90" scroll="0.4" scale="1"/>

	<sprite name="temmie" x="1600" y="750" sprite="flashback/temmie" scale="1" scroll="0.6">
		<anim name="idle" anim="temmie_idle" x="0" y="0" loop="true" fps="24"/>
		<anim name="die" anim="temmie_DIES" x="0" y="0" loop="false" fps="24"/>
	</sprite>

	<sprite name="hoodie_bunnies" x="1000" y="750" sprite="flashback/hoodie_bunnies" scale="1" scroll="0.6">
		<anim name="idle" anim="hood_bunnies_idle" x="0" y="0" loop="true" fps="24"/>
		<anim name="die" anim="hood_bunnies_DIES" x="0" y="0" loop="false" fps="24"/>
	</sprite>

	<sprite name="table_back"  x="220" y="150" sprite="flashback/5" scroll="0.6" scale="1"/>
	<sprite name="chair_back" x="200" y="350" sprite="flashback/4" scroll="0.9" scale="1"/>
	<sprite name="chair" x="200" y="350" sprite="flashback/3" scroll="0.9" scale="1"/>
	<sprite name="cup" x="200" y="350" sprite="flashback/2" scroll="0.9" scale="1"/>

	<sprite name="bunny" x="1950" y="750" sprite="flashback/bunny">
		<anim name="idle" anim="bunny_idle" x="0" y="0" loop="true" fps="24"/>
		<anim name="die" anim="bunny_DIES" x="0" y="0" loop="false" fps="24"/>
	</sprite>

	<sprite name="table" sprite="flashback/1" x="330" y="300" scale="1.2"/> 

	<gf scale="0"/>
	<dad x="350" y="750" scale="1.1" camxoffset="150" camyoffset="-100"/>
	<bf x="1630" y="920" scale="1.1" camxoffset="-200" camyoffset="-100" />

	<sprite name="muffet" x="500" y="650" sprite="flashback/muffet" scroll="1.2" scale="1.2">
		<anim name="idle" anim="muffet_idle" x="0" y="0" loop="true" fps="24"/>
		<anim name="die" anim="muffet_DIES" x="0" y="0" loop="false" fps="24"/>
	</sprite>

	<sprite y="-700" name="shading" sprite="shading" scroll="0">
		<property name="zoomFactor" type="float" value="0"/>
	</sprite>
</stage>
